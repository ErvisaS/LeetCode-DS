class Solution {
    public int maxSubArray(int[] nums) {
      int sum = nums[0];
        int max = nums[0];
        
        for (int i = 1; i < nums.length; i++) {
            if (sum < 0){ // if sum < 0, discard and start again
                sum = 0;
            }
            sum += nums[i]; //add current number to sum
             if(sum > max) { // compare current sum to max
                max = sum;
            }
        }
        return max;
    }  
    
}
